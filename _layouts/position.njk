---
layout: base.njk
---

<article class="max-w-3xl mx-auto bg-white rounded-2xl shadow-luxe overflow-hidden">
  <header class="bg-primary text-white p-8">
    <h1 class="text-4xl font-serif">{{ title }}</h1>
    {% if data.date %}
      <p class="mt-2 text-sm opacity-75">{{ data.date }}</p>
    {% endif %}
  </header>
  <video src="{{ video }}" controls class="w-full h-auto mb-6"></video>
  <div class="prose prose-lg p-8 text-primary">
    {{ content | safe }}
  </div>
</article>
